# Configured in the secret file
[credential]
    helper = ""

# Local/private config goes in the include
[include]
	path = ./config.secret

[init]
    defaultBranch = main
[commit]
    template = ./commit_template
    verbose = true
[status]
    short = true
[fetch]
    prune = true
[pull]
    ff = true
[push]
    followTags = true

# Merge tool
[merge]
    tool = nvimdiff
    conflictstyle = diff3
[mergetool]
    prompt = false
    keepBackup = false
[mergetool "nvimdiff"]
    layout = "LOCAL,BASE,REMOTE / MERGED"

# Diff tool
[core]
    pager = delta
    editor = nvim
[interactive]
    diffFilter = delta --color-only
[delta]
    navigate = true    # use n and N to move between diff sections
    line-numbers = true
    # side-by-side = true
[diff]
    colorMoved = default
